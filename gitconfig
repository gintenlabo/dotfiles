[include]
	path = .gitconfig.local
[core]
	editor = vim
	excludesfile = ~/.gitignore
	pager = "LESSCHARSET=utf-8 less -FRX"
[alias]
	current-branch = "!sh -c \"git branch | grep '*' | awk '{ print \\$2 }' \""
[merge]
	ff = false
[push]
	default = current
[rebase]
	autosquash = true
[pull]
	rebase = true
