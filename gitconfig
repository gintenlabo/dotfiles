[include]
	path = .gitconfig.local
[core]
	editor = vim
	excludesfile = ~/.gitignore_global
[alias]
	current-branch = "branch --show-current"
	mg = "merge --no-ff"
	ff = "merge --ff --ff-only"
	fa = "fetch --all"
	sw = "switch"
	swd = "switch --detach"
	backup-changes-and-reset = "![ -z \"$(git diff HEAD)\" ] || (git commit -am 'backup' && git reset HEAD~)"
	backup-changes = "!if [ -n \"$(git diff --cached)\" ]; then git commit -m 'backup stage' && git backup-changes-and-reset && git reset --soft HEAD~; else git backup-changes-and-reset; fi"
[merge]
	ff = false
[push]
	default = current
[rebase]
	autosquash = true
[pull]
	rebase = true
