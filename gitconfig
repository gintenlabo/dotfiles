[include]
	path = .gitconfig.local
[core]
	editor = vim
	excludesfile = ~/.gitignore_global
[alias]
	current-branch = "branch --show-current"
	mg = "merge --no-ff"
	ff = "merge --ff --ff-only"
	fa = "fetch --all"
	sw = "switch"
	swd = "switch --detach"
	backup-changes-unstaging = "!git diff --quiet HEAD || (git commit -am \"backup changes on $(git rev-parse --short HEAD)\" && git reset HEAD~)"
	backup-changes = "!if git diff --quiet --cached; then git backup-changes-unstaging; else git commit -m \"backup stage on $(git rev-parse --short HEAD)\" && git backup-changes-unstaging && git reset --soft HEAD~; fi"
	soft-reset = "reset --soft"
	hard-reset = "!git backup-changes-unstaging && git reset --hard"
[merge]
	ff = false
[push]
	default = current
[rebase]
	autosquash = true
[pull]
	rebase = true
